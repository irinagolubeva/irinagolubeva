doctype html
html
	head
		title #{title}
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		<!--[if lte IE 8]>
		script(src="/assets/js/ie/html5shiv.js")
		<![endif]-->

		link(rel="stylesheet", href="/assets/css/main.css")
		link(rel="stylesheet", href="/assets/css/custom.css")

		<!--[if lte IE 8]>
		link(rel="stylesheet", href="/assets/css/ie8.css")
		<![endif]-->

	body#top
		header#header
			a.image.avatar(href="#")
				img(src="/media/avatar.jpg", alt="")

			h1
				a(href="#")
					strong #{siteName}
				div #{siteDescription}

		#main
			if typeof nav !== 'undefined' && nav.length
				nav
					each page in nav
						a(href="/#{page.path}") #{page.title}
						| 

			section
				header.major
					h2 #{title}

				block content

		footer#footer
			ul.icons
				//- li
				//- 	a.icon.fa-twitter(href="#")
				//- 		span.label Twitter
				//- li
				//- 	a.icon.fa-github(href="#")
				//- 		span.label Github
				//- li
				//- 	a.icon.fa-dribbble(href="#")
				//- 		span.label Dribbble
				li
					a.icon.fa-envelope-o(href="#")
						span.label Email

			ul.copyright
				li &copy; И.С. Голубева, 2015
				li
					| Дизайн: 
					a(href="http://html5up.net") HTML5 UP

		script(src="/assets/js/jquery.min.js")
		script(src="/assets/js/jquery.poptrox.min.js")
		script(src="/assets/js/skel.min.js")
		script(src="/assets/js/util.js")
		<!--[if lte IE 8]>
		script(src="/assets/js/ie/respond.min.js")
		<![endif]-->
		script(src="/assets/js/main.js")
